# CoinMarketCap Pro API Key
CMC_API_KEY=your_coinmarketcap_api_key_here

# Database URL (Postgres - e.g., Supabase)
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# CryptoPanic API Key (Optional - for live news ticker)
# Get free key at: https://cryptopanic.com/developers/api/
# Without key: limited to public feed (20 requests/day)
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# Google OAuth (Optional - for Google Sign In)
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
